                    },
                    {
                        "name": "token",
                        "in": "query",
                        "description": "The token for password reset sent to the user's email",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "2bcc51a1eae1daef3b8390a2d9dd5ba00d0ffa8641ea671da4a274b8bac325"
